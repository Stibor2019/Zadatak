<?xml version="1.0" encoding="utf-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="Zaposleni" table="zaposleni_tabela">

        <meta attribute="class-description">
            This class contains the person details
        </meta>

        <id name="zaposleni_id" type="int" column="zaposleni_id">
            <generator class="increment"/>
        </id>

        <property name="zaposleni_ime" column="zaposleni_ime" type="string"/>
        <property name="zaposleni_godine" column="zaposleni_godine" type="int"/>
       <property name="zaposleni_adresa" column="zaposleni_adresa" type="string"/>
        <property name="zaposleni_plata" column="zaposleni_plata" type="int"/>
    </class>
</hibernate-mapping>
